{
	"name": "leniwiec",
	"version": "2.0.0",
	"description": "A lightweight library for lazy loading of images based on the IntersectionObserver API.",
	"keywords": [
		"lazyload-images",
		"lazyload",
		"lazy-loading",
		"lazy-load-img",
		"lazy-load",
		"lazy-evaluation",
		"lazy-loading-image",
		"performance",
		"vanilla-javascript",
		"vanilla-js",
		"vanillajs",
		"seo-friendly"
	],
	"main": "lib/leniwiec.js",
	"browser": "lib/leniwiec.js",
	"unpkg": "lib/leniwiec.js",
	"private": false,
	"files": [
		"lib",
		"src"
	],
	"scripts": {
		"build:umd": "rollup --config scripts/umd.js && rollup --config scripts/umd.min.js",
		"build:lib": "npm run build:umd",
		"server": "live-server ./docs",
		"copyLibToDocs": "copyfiles ./lib/leniwiec.min.js ./docs/js -f",
		"build:docs": "npm run copyLibToDocs",
		"test": "jest"
	},
	"homepage": "https://github.com/tyczynski/leniwiec.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tyczynski/leniwiec.js.git"
	},
	"bugs": {
		"url": "https://github.com/tyczynski/leniwiec.js/issues"
	},
	"licenses": [
		{
			"type": "MIT",
			"url": "https://github.com/tyczynski/leniwiec.js/blob/master/LICENSE"
		}
	],
	"author": {
		"name": "Przemysław Tyczyński",
		"url": "https://tyczynski.pl",
		"email": "przemyslaw@tyczynski.pl"
	},
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --config .prettierrc --write",
			"eslint --fix",
			"git add"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@types/jest": "^24.0.15",
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"copyfiles": "^2.1.1",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.3.0",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-prettier": "^3.1.0",
		"husky": "^2.4.1",
		"lint-staged": "^8.2.0",
		"live-server": "^1.2.1",
		"node-sass": "^4.12.0",
		"prettier": "^1.18.2",
		"rollup": "^1.17.0",
		"rollup-plugin-terser": "^5.1.1",
		"rollup-plugin-typescript": "^1.0.1",
		"ts-jest": "^24.0.2",
		"tslib": "^1.10.0",
		"typescript": "^3.5.3"
	}
}
